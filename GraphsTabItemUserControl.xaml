<UserControl x:Class="DynamicTestingWPF.GraphsTabItemUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DynamicTestingWPF"
             mc:Ignorable="d" 
             d:DesignHeight="355" d:DesignWidth="800">
    <Grid>
        <Label Name="mainLabel" Content="{Binding TextBoxContent}" HorizontalAlignment="Left" VerticalAlignment="Top" Height="66" Width="260" Margin="502,16,0,0"/>
        <Button Content="Button" HorizontalAlignment="Center" Margin="0,32,0,0" VerticalAlignment="Top" Height="28" Width="194" Click="Button_Click"/>
        <TextBlock HorizontalAlignment="Left" Margin="109,38,0,0" Text="{Binding LabelContent}" TextWrapping="Wrap" VerticalAlignment="Top" Height="22" Width="152"/>
        <Image Name="imageHolder" Source="{Binding BitmapImageSource}" Margin="0,65,0,0"/>
    </Grid>
</UserControl>
